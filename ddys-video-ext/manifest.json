{
  "manifest_version": 3,
  "name": "低端影视浏览记录",
  "version": "1.0",
  "description": "记录在 ddys.pro 网站上的视频浏览历史",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://ddys.pro/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "低端影视浏览记录"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [ "icons/*.svg" ],
      "matches": [ "https://ddys.pro/*" ]
    }
  ]
}